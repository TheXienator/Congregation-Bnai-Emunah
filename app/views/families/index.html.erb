<h1>Welcome to the Sample App</h1>

<table>
  <tr>
    <th>Family Name</th>
    <th>Phone Number</th>
    <th>Email</th>
    <th>More Info</th>
  </tr>

  <% @families.each do |family| %>
  <tr>
    <td><%= family.name %></td>
    <td><%= family.phone %></td>
    <td><%= family.email %></td>
    <td><%= link_to "More Info about #{family.name} Family", family_path(family) %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'Add Family', new_family_path %>
