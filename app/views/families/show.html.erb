<h2><%=@family.name%> Family</h2>

<ul class="list-group">
  <li class="list-group-item">
    <p>
    <b>Members:</b>
    <%= @family.people %></p>
  </li>
  <li class="list-group-item">
    <p>
    <b>Status:</b>
    <%= @family.status %></p>
  </li>
  <li class="list-group-item">
    <p>  
    <b>Email:</b>
    <%= @family.email %></p>
  </li>
  <li class="list-group-item">
    <p>
    <b>Phone:</b>
    <%= @family.phone %></p>
  </li>
  <li class="list-group-item">
    <b>Action:</b></br>
    <%= link_to 'Edit Family', edit_family_path(@family) %>
    <% if current_user and current_user.admin? %>
      <%= button_to 'Delete Family', family_path(@family), method: :delete %>
      <!--data: { confirm: 'Are you sure you want to delete this family?' } %>-->
    <% end %>
    <%= link_to 'Back to family list', families_path %>
  </li>
</ul>

</br>

<h3>Comments:</h3>
<%= render show_comments %>

</br>

