<h2>User <%=@user.name%></h2>
<p>  
  <b>Name:</b>
  <%= @user.name %>
</p>
<p>  
  <b>Email:</b>
  <%= @user.email %>
</p>
<p>
  <b>Admin Status:</b>
  <%= @user.admin %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %>
<% if current_user.admin? %>
  <%= button_to 'Delete User', user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %>
<% end %>
<%= link_to 'Back to user list', users_path %>

