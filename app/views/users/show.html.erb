<h2>User <%=@user.name%></h2>

  <ul class="list-group">
    <li class="list-group-item">
      <p>  
      <b>Name:</b>
      <%= @user.name %></p>
    </li>
    <li class="list-group-item">
      <p>  
      <b>Email:</b>
      <%= @user.email %></p>
    </li>
    <li class="list-group-item">
      <p>  
      <b>Phone:</b>
      <%= @user.phone %></p>
    </li>
    <li class="list-group-item">
      <p>
      <b>Admin Status:</b>
      <%= @user.admin %></p>
    </li>
    <li class="list-group-item">
      <b>Actions:</b></br>
      <%= link_to 'Edit User', edit_user_path(@user) %>
      <% if current_user.admin? %>
        <%= button_to 'Delete User', user_path(@user), method: :delete %>
          <!--,data: { confirm: 'Are you sure you want to delete this user?' } %>-->
      <% end %>
      <%= link_to 'Back to user list', users_path %>
    </li>
  </ul>

</br>

<h4>Pending Tasks:</h4>
  <%= render @pending_tasks.reverse %>
</br>

<% if current_user.admin? %> 
  <h4>Add a Task:</h4>
    <%= render 'tasks/form' %>
  </br>
<% end %>

<h4>Completed Tasks:</h4>
<%= render @completed_tasks.reverse %>