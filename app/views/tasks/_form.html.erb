<%= simple_form_for([@user, @user.tasks.build]) do |f| %>
  <ul class="list-group">
    <li class="list-group-item">
      <%= f.input :content, label: "Task" %>
      <%= f.input :priority, label: "Priority", collection: ['Normal', 'Urgent'], selected: 'Normal' %>
    </li>
  </ul>

  <div class = "buttonControl">
    <%= f.button :submit %>
  </div>
<% end %>